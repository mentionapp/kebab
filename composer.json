{
    "name": "mention/kebab",
    "description": "Wrappers around the PHP standard library focused on safety and testability",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Arnaud Le Blanc",
            "email": "arnaud.lb@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Mention\\Kebab\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": ["tests"]
    },
    "require": {
        "php": ">=8.1",
        "beberlei/assert": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.6",
        "phing/phing": "^2.16",
        "phpstan/phpstan": "^1.4.6",
        "phpstan/phpstan-beberlei-assert": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.4"
    }
}
